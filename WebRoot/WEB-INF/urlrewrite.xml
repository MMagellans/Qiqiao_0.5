<?xml version="1.0" encoding="utf-8"?>
<!--
    Configuration file for UrlRewriteFilter http://tuckey.org/urlrewrite/
-->
<urlrewrite>

    <rule>
        <from>^/index.html</from>
        <to>/homeAction_index.action</to>
    </rule>
    <rule>
        <from>^/register.html</from>
        <to>/userAction/registerUI.action</to>
    </rule>
    <rule>
        <from>^/login.html</from>
        <to>/userAction/loginUI.action</to>
    </rule>
    <rule>
        <from>^/forum.html</from>
        <to>/sectionAction/list.action</to>
    </rule>
    <rule>
        <from>^/forum-([0-9]+)\.html</from>
        <to>/boardAction/show.action?id=$1</to>
    </rule>
    <rule>
        <from>^/forum-([0-9]+)-([0-9]+)\.html</from>
        <to>/boardAction_show.action?id=$1&amp;pageNum=$2</to>
    </rule>
    <rule>
        <from>^/topic-([0-9]+)\.html</from>
        <to>/topicAction/show.action?id=$1</to>
    </rule>
    <rule>
        <from>^/topic-([0-9]+)-([0-9]+)\.html</from>
        <to>/topicAction_show.action?id=$1&amp;pageNum=$2</to>
    </rule>
    <rule>
        <from>^/topicnew-([0-9]+)\.html</from>
        <to>/topicAction_addUI.action?boardId=$1</to>
    </rule>
    <rule>
        <from>^/adminUI\.html</from>
        <to>/adminAction_loginUI.action</to>
    </rule>
    <rule>
        <from>^/replyadd\.html</from>
        <to>/replyAction/add.action </to>
    </rule>
    <rule>
        <from>^/replyaddUI\.html</from>
        <to>/replyAction_addUI.action</to>
    </rule>
